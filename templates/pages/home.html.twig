{% extends 'base.html.twig' %}
{% block title 'Sedent-Here' %}
{% block body %}
    {%  for message in app.flashes('success') %}
        <div class="jumbotron text-center">
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        </div>
    {% endfor %}
    <div class="container">
        <h2> Dernieres annonces</h2>
        <div class="row flex">
            {% for job in jobs %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                             <h5 class="card-title">
                                 <a href="{{ path('job.show', {id: job.id, slug: job.slug}) }}">{{ job.title }}</a>
                             </h5>
                            <p class="card-text">{{ job.city }} ({{ job.postalCode }})</p>
                            <div class="text-primary"> {{ job.formatedSalary }} â‚¬</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

